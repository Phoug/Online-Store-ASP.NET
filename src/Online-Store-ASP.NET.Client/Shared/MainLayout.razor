@inherits LayoutComponentBase
@using Microsoft.JSInterop
@using Online_Store_ASP_NET.Shared.DTO.Category
@using System.Net.Http.Json
@inject IJSRuntime JS
@inject NavigationManager Navigation
@inject HttpClient Http

<header class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm sticky-top" style="height: 70px; min-height: 70px;">
    <div class="container-fluid d-flex align-items-center h-100">

        <NavLink class="navbar-brand fw-bold fs-2 my-brand me-4" href="/">
            PHOUG
        </NavLink>

        <button class="nav-link top-item d-flex align-items-center me-3 btn btn-link p-0 border-0"
                @onclick="ToggleCatalog">
            <i class="@(IsCatalogOpen ? "bi bi-x-lg" : "bi bi-grid") top-icon"></i>
            <span>Каталог</span>
        </button>

        <div class="flex-grow-1 me-4">
            <input class="form-control search-box" type="search" placeholder="Поиск товаров...">
        </div>

        <button class="nav-link top-item d-flex align-items-center me-3 btn btn-link p-0 border-0"
                @onclick="GoToAccount">
            <i class="bi bi-person top-icon"></i>
            <span>Кабинет</span>
        </button>

        <NavLink class="nav-link top-item d-flex align-items-center me-3" href="orders">
            <i class="bi bi-receipt top-icon"></i>
            <span>Заказы</span>
        </NavLink>

        <NavLink class="nav-link top-item d-flex align-items-center me-3" href="favorites">
            <i class="bi bi-heart top-icon"></i>
            <span>Избранное</span>
        </NavLink>

        <NavLink class="nav-link top-item d-flex align-items-center position-relative" href="cart">
            <i class="bi bi-cart3 top-icon"></i>
            <span>Корзина</span>
        </NavLink>

    </div>
</header>

<div class="catalog-wrapper">
    <div class="catalog-overlay @(IsCatalogOpen ? "show" : "")" @onclick="CloseCatalog"></div>

    <div class="catalog-sidebar @(IsCatalogOpen ? "open" : "")">
        <div class="catalog-content">

            <div class="catalog-header">
                <h4 class="fw-bold text-white mb-0">Категории</h4>
                @if (IsAdmin)
                {
                    <button class="btn btn-sm btn-success rounded-pill px-3 fw-bold shadow-sm"
                            style="background-color: var(--accent-color); border: none;"
                            @onclick="ShowAddCategoryModal">
                        <i class="bi bi-plus-lg me-1"></i> Добавить
                    </button>
                }
            </div>

            <div class="catalog-list">
                @if (Categories == null)
                {
                    <div class="text-white-50 text-center py-3">Загрузка...</div>
                }
                else if (!Categories.Any())
                {
                    <div class="text-white-50 text-center py-3">Категорий пока нет</div>
                }
                else
                {
                    <div class="category-list">
                        @foreach (var cat in Categories)
                        {
                            <div class="category-item d-flex align-items-center justify-content-between p-2 rounded mb-2">
                                <div class="d-flex align-items-center flex-grow-1 gap-3"
                                     @onclick="() => ToggleCategorySelection(cat.Id)">
                                    <div class="custom-checkbox @(SelectedCategoryIds.Contains(cat.Id) ? "checked" : "")">
                                        <i class="bi bi-check-lg text-white" style="@(SelectedCategoryIds.Contains(cat.Id) ? "" : "display:none")"></i>
                                    </div>
                                    <span class="cat-name text-white">@cat.Name</span>
                                </div>

                                @if (IsAdmin)
                                {
                                    <button class="btn btn-link text-danger p-0 ms-2 delete-btn"
                                            @onclick:stopPropagation="true"
                                            @onclick="() => DeleteCategory(cat.Id)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                }
                            </div>
                        }
                    </div>
                }
            </div>

            <div class="catalog-footer">
                <button class="btn btn-primary w-100 rounded-pill fw-bold"
                        style="background-color: var(--accent-color); border: none;"
                        @onclick="ApplyFilters">
                    Показать товары (@SelectedCategoryIds.Count)
                </button>
            </div>
        </div>
    </div>
</div>

@if (ShowAddModal)
{
    <div class="modal-backdrop show" style="background-color: rgba(0,0,0,0.7);"></div>
    <div class="modal d-block fade show" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content custom-modal">
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title fw-bold text-uppercase tracking-wider" style="color: var(--accent-color);">
                        Новая категория
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="() => ShowAddModal = false"></button>
                </div>

                <div class="modal-body pt-4">
                    <div class="mb-4">
                        <label class="form-label small text-uppercase text-muted fw-bold tracking-wider">Название</label>
                        <input class="form-control custom-input"
                               placeholder="Например: Смартфоны"
                               @bind="NewCategoryName" />
                    </div>

                    <div class="mb-2">
                        <label class="form-label small text-uppercase text-muted fw-bold tracking-wider">Описание</label>
                        <textarea class="form-control custom-input"
                                  rows="3"
                                  placeholder="Краткое описание категории..."
                                  @bind="NewCategoryDescription"></textarea>
                    </div>

                    @if (!string.IsNullOrEmpty(AddCategoryError))
                    {
                        <div class="alert alert-danger mt-3 py-2 small rounded-3">
                            <i class="bi bi-exclamation-circle-fill me-2"></i>@AddCategoryError
                        </div>
                    }
                </div>

                <div class="modal-footer border-0 pt-0 pb-4 px-3 justify-content-between">
                    <button type="button" class="btn btn-outline-secondary rounded-pill px-4" @onclick="() => ShowAddModal = false">
                        Отмена
                    </button>
                    <button type="button" class="btn btn-primary custom-btn px-4" @onclick="AddCategory" disabled="@IsAdding">
                        @if (IsAdding)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            <span>Сохранение...</span>
                        }
                        else
                        {
                            <span>Создать</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<main class="container pt-2 pb-4">
    @Body
</main>

@code {
    private bool IsCatalogOpen = false;
    private bool ShowAddModal = false;
    private bool IsAdmin = false;
    private bool IsAdding = false;
    private string NewCategoryName = "";
    private string NewCategoryDescription = "";
    private string AddCategoryError = "";

    public class CategoryDto { public int Id { get; set; } public string Name { get; set; } = ""; }
    private List<CategoryDto>? Categories;
    private HashSet<int> SelectedCategoryIds = new();

    protected override async Task OnInitializedAsync()
    {
        await CheckUserRole();
        await LoadCategories();
    }

    private async Task CheckUserRole()
    {
        try
        {
            var role = await JS.InvokeAsync<string>("localStorage.getItem", "userRole");
            IsAdmin = !string.IsNullOrEmpty(role) && role.Equals("Admin", StringComparison.OrdinalIgnoreCase);
        }
        catch
        {
            IsAdmin = false;
        }
    }

    private async Task ToggleCatalog()
    {
        if (!IsCatalogOpen)
        {
            await CheckUserRole();
        }
        IsCatalogOpen = !IsCatalogOpen;
    }

    private async Task LoadCategories()
    {
        try
        {
            Categories = await Http.GetFromJsonAsync<List<CategoryDto>>("category");
        }
        catch
        {
            Categories = new List<CategoryDto>();
        }
    }

    private void CloseCatalog() => IsCatalogOpen = false;

    private void ToggleCategorySelection(int id)
    {
        if (SelectedCategoryIds.Contains(id)) SelectedCategoryIds.Remove(id);
        else SelectedCategoryIds.Add(id);
    }

    private void ApplyFilters()
    {
        CloseCatalog();
        var query = string.Join(",", SelectedCategoryIds);
        Navigation.NavigateTo($"/products?categories={query}");
    }

    private void ShowAddCategoryModal()
    {
        NewCategoryName = "";
        NewCategoryDescription = "";
        AddCategoryError = "";
        ShowAddModal = true;
    }

    private async Task AddCategory()
    {
        if (string.IsNullOrWhiteSpace(NewCategoryName))
        {
            AddCategoryError = "Введите название!";
            return;
        }

        IsAdding = true;
        AddCategoryError = "";

        try
        {
            var createDto = new CategoryCreateDto
            {
                Name = NewCategoryName,
                Description = NewCategoryDescription
            };

            var response = await Http.PostAsJsonAsync("category", createDto);

            if (response.IsSuccessStatusCode)
            {
                await LoadCategories();
                ShowAddModal = false;
            }
            else
            {
                AddCategoryError = "Ошибка сервера при создании.";
            }
        }
        catch (Exception ex)
        {
            AddCategoryError = $"Ошибка: {ex.Message}";
        }
        finally
        {
            IsAdding = false;
        }
    }

    private async Task DeleteCategory(int id)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Удалить категорию?");
        if (confirmed)
        {
            var response = await Http.DeleteAsync($"category/{id}");
            if (response.IsSuccessStatusCode)
            {
                await LoadCategories();
            }
            else
            {
                await JS.InvokeVoidAsync("alert", "Не удалось удалить.");
            }
        }
    }

    private async Task GoToAccount()
    {
        var userId = await JS.InvokeAsync<string>("localStorage.getItem", "currentUserId");
        Navigation.NavigateTo(string.IsNullOrEmpty(userId) ? "/login" : "/account");
    }
}

